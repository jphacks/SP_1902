<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControllActivity">

    <Button
        android:id="@+id/action3Button"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="クルッと"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:text="Labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelsText"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp" android:textSize="36sp"/>

    <Button
        android:id="@+id/action2Button"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="スライド"
        app:layout_constraintBottom_toBottomOf="@+id/gravityText"
        app:layout_constraintEnd_toStartOf="@+id/action3Button"
        app:layout_constraintStart_toEndOf="@+id/action1Button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/action1Button"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="カット"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:text="加速度の値"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accelText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        android:textSize="14sp" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView11"/>
    <TextView
        android:text="加速度センサ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        android:textSize="18sp" android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/action2Button"/>

    <TextView
        android:text="gravity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gravityText" android:textSize="36sp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>